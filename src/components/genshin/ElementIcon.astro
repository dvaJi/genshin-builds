---
import { getUrl } from "@/lib/img";

export interface Props {
  type: string;
  width?: number;
  height?: number;
  className?: string;
}

const { type, className, height = 64, width = 64 } = Astro.props;
---

<img
  src={getUrl(`/elements/${type}.png`, height, width)}
  alt={type}
  class={className}
  width={width}
  height={height}
/>
